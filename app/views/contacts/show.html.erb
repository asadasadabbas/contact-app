<!-- page content -->
<div class="right_col" role="main" style="min-height: 680px;">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3><%= @contact.name %></h3>
      </div>

      <div class="title_right">
        <div class="pull-right">
          <%= link_to "<i class='md-add-circle'></i> Back".html_safe, contacts_path, class: 'btn btn-primary waves-effect waves-light' %>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:600px;">
          <div class="x_title">
            <div class="row">
				<div class="x_content">
					<br />
					<div class="row">
						<div class="col-sm-2">Name: </div>
						<div class="col-sm-8"><%= @contact.name %></div>
					</div>
					<div class="row">
						<div class="col-sm-2">Email: </div>
						<div class="col-sm-8"><%= @contact.try(:email) %></div>
					</div>
					<div class="row">
						<div class="col-sm-2">Phone: </div>
						<div class="col-sm-8"><%= @contact.try(:phone) %></div>
					</div>
					<div class="row">
						<div class="col-sm-2">Address: </div>
						<div class="col-sm-8"><%= @contact.try(:address) %></div>
					</div>
					<div class="row">
						<div class="col-sm-2">Company: </div>
						<div class="col-sm-8"><%= @contact.try(:company) %></div>
					</div>
					<div class="row">
						<div class="col-sm-2">Age: </div>
						<div class="col-sm-8"><%= age(@contact.dob) %></div>
					</div>
					</br>
				</div>
				</div>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>



