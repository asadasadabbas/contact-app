<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Contact List</h3>
      </div>

      <div class="title_right">
        <div class="pull-right">
          <%= link_to "<i class='md-add-circle'></i> New Contact".html_safe, new_contact_path, class: 'btn btn-primary waves-effect waves-light' %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:600px;">
          <div class="x_title">
            <div class="row">
              <table class="table">
                <thead>
                  <tr>
                    <th>User</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Company</th>
                    <th>D.O.B.</th>
                    <th colspan="3" align="center">Actions</th>
                  </tr>
                </thead>

                <tbody>
                  <% @contacts.each do |contact| %>
                  <tr>
                    <td><%= contact.name %></td>
                    <td><%= contact.email %></td>
                    <td><%= number_to_phone(contact.phone) %></td>   
                    <td><%= contact.address %></td> 
                    <td><%= contact.company %></td> 
                    <td><%= contact.dob %></td>  
                    <td><%= link_to('', contact, class: "fa fa-eye", title: 'View', :data => {:toggle=>"tooltip"}, 'data-original-title' => "View", 'data-placement' => 'top') %> </td>    
                    <!-- <td><%#= link_to 'View', contact %></td> -->
                    <td><%= link_to('', edit_contact_path(contact), class: "fa fa-pencil", title: 'Edit', :data => {:toggle=>"tooltip"}, 'data-original-title' => "Edit", 'data-placement' => 'top') %></td>
                    <td><%= link_to('', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash-o", title: 'Delete', :data => {:toggle=>"tooltip"}, 'data-original-title' => "Delete", 'data-placement' => 'top') %>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


